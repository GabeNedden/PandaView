<%- include("../partials/header") %>

<div class="container">
	
<div class="jumbotron">
  <h1 class="display-4">Welcome to the Red Panda Viewer!</h1>
  <p class="lead">Have a look at the multiverse's most compelling Pandas!</p>
  <hr class="my-4">
  <p>Pick a name and add a photo using, right click, copy image url or address!</p>
  <a class="btn btn-primary btn-sm" href="/campgrounds/new" role="button">Add a New Panda!</a>
</div>
	
<div class="container">
  <div class="row center">
    <% campgrounds.forEach(function(campground){ %>
	<div class="col-sm">
	<div class="card" style="width: 15rem;">
  		<img src="<%= campground.image %>" class="card-img-top">
  		<div class="card-body">
    	<h5 class="card-title"><%= campground.name %></h5>
    	<p class="card-text"></p>
    	<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
  		</div>
	</div>
		
	</div>
	<% }); %>
	  
  </div>
</div>

</div>

<%- include("../partials/footer") %>